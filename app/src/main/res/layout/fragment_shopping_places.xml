<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingPlacesFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/emproium_mall" />

            <TextView
                android:id="@+id/emporium_mall_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emporium Mall"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/mall_sqaure" />

            <TextView
                android:id="@+id/Fortress_sqaure_mall_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortress Square Mall"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:layout_gravity="center"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/mall_lahore" />

            <TextView
                android:id="@+id/mall_of_Lahore_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Mall Of Lahore"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/amanah_mall" />

            <TextView
                android:id="@+id/amanah_Mall_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanah Mall"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:layout_gravity="center"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/packages_mall" />

            <TextView
                android:id="@+id/packages_Mall_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packages Mall"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:clickable="true"
                android:layout_gravity="center"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000" />

    </LinearLayout>

</ScrollView>